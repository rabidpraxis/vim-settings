set number
set cursorline
set showmatch
set novisualbell
set guicursor=a:blinkon0

set cmdheight=2

" make tab completion for files/buffers act like bash
set wildmenu              
" show a list when pressing tab and complete
set wildmode=list:longest 
set wildignore=tmp/**

" Show hidden
" set list
" set listchars=tab:▸\ ,eol:¬

" Tab
set softtabstop=2
set shiftwidth=2
set tabstop=2
set expandtab
set smarttab

colorscheme rp
set shell=zsh
